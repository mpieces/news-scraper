<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
        <img src="newspaper.jpg"/>
    </div>
    <div class="caption">
        <h1>Mongo Scraper</h1>
        <h5>Buzzfeed News Edition</h5>
    </div>
</div>

<div class="container-fluid">
    <div id="display-articles">
        <div class="row">
            {{#each article}}
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{this.photo}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text"><a href="{{this.link}}" </a> </p> <a href="{{this.link}}"
                                class="btn btn-primary">Read Article</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>